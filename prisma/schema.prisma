generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int          @id @default(autoincrement())
  username String       @unique
  password String
  role     Role
  histories UserHistory[]

}

model BahanBaku {
  id          Int      @id @default(autoincrement())
  name        String
  quantity    Float
  alpha       Float
  month       String   // Menyimpan bulan yang dimasukkan
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  forecasts   HasilPeramalan[]
}

model HasilPeramalan {
  id             Int      @id @default(autoincrement())
  rawMaterialId  Int
  forecastValue  Float
  forecastDate   DateTime
  alpha          Float    // Menyimpan nilai alpha yang digunakan untuk peramalan
  rawMaterial    BahanBaku @relation(fields: [rawMaterialId], references: [id]) // Menghubungkan dengan BahanBaku
}

enum Role{
  admin
  staff
}

model UserHistory {
  id          Int       @id @default(autoincrement())
  title       String    @default("Default Title")
  description String    @default("No description available")
  createdAt   DateTime  @default(now())

  userId      Int?      // Mengubah menjadi nullable sementara
  user        User?     @relation(fields: [userId], references: [id])

  @@index([userId])
}


